{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "scripts",
        "declaration": true,
    },
    "include": [
        "src",
        "src/library/*"    
    ],
    "exclude": [
        "scripts",
    ],
}